# Convex Integration Environment Configuration
# This file configures the frontend to use Convex for real-time data

# Enable Convex integration
NEXT_PUBLIC_USE_CONVEX=true

# Convex URL (production deployment)
NEXT_PUBLIC_CONVEX_URL=https://upbeat-parrot-866.convex.cloud

# API endpoints for RDKit integration
NEXT_PUBLIC_API_URL=https://cryoprotect-8030e4025428.herokuapp.com
NEXT_PUBLIC_RDKIT_URL=https://cryoprotect-rdkit.fly.dev

# Development settings
NODE_ENV=development

# Backend Configuration
CONVEX_DB_ENABLED=true
DB_ADAPTER_ORDER=convex,supabase,local,mcp

# Convex Connection Settings
CONVEX_URL=https://upbeat-parrot-866.convex.cloud
CONVEX_DEPLOYMENT_KEY=your-deployment-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_SECONDS=86400

# Convex Resilience Settings
CONVEX_TIMEOUT=30
CONVEX_RETRY_COUNT=3
CONVEX_CIRCUIT_BREAKER_THRESHOLD=5
CONVEX_CIRCUIT_BREAKER_TIMEOUT=60

# Synchronization (optional)
CONVEX_SYNC_ENABLED=true
CONVEX_SYNC_INTERVAL=300
CONVEX_SYNC_TABLES=molecules,experiments,protocols
CONVEX_CONFLICT_RESOLUTION=last_modified