# Convex Backend Integration Configuration
# Copy this file to .env and fill in your values

# Convex Connection
CONVEX_URL=https://your-deployment-id.convex.cloud
CONVEX_DEPLOYMENT_KEY=your-deployment-key
CONVEX_DB_ENABLED=true

# Connection Settings
CONVEX_TIMEOUT=30
CONVEX_RETRY_COUNT=3
CONVEX_CIRCUIT_BREAKER_THRESHOLD=5
CONVEX_CIRCUIT_BREAKER_TIMEOUT=60

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_SECONDS=86400

# Connection Manager Configuration
# Set adapter order (comma-separated list)
# DB_ADAPTER_ORDER=convex,supabase,local,mcp

# Sync Settings (optional)
CONVEX_SYNC_INTERVAL=60
# Comma-separated list of tables to sync
CONVEX_SYNC_TABLES=molecules,experiments,protocols
# Conflict resolution strategy: last_modified, supabase_wins, convex_wins
CONVEX_CONFLICT_RESOLUTION=last_modified