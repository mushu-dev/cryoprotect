{
  "name": "cryoprotect",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "cd frontend && chmod +x ./netlify-build.sh && ./netlify-build.sh",
    "dev": "cd frontend && npm run dev",
    "dev:convex": "cd frontend && NEXT_PUBLIC_USE_CONVEX=true npm run dev",
    "start": "cd frontend && npm run start",
    "convex:dev": "cd convex && npx convex dev",
    "convex:deploy": "cd convex && npx convex deploy",
    "convex:codegen": "cd convex && npx convex codegen",
    "convex:setup": "cd frontend && node scripts/setup-convex-env.js",
    "convex:init": "npm run convex:setup && npm run convex:codegen",
    "convex:dashboard": "npx convex dashboard",
    "convex:simple": "cd convex-simple && npx convex dev",
    "test:convex": "jest --config tests/convex/jest.config.js",
    "test:convex:watch": "jest --config tests/convex/jest.config.js --watch",
    "dev:with-convex": "npx concurrently \"npm run dev\" \"npm run convex:dev\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "convex": "^1.24.1"
  },
  "devDependencies": {
    "@clerk/clerk-js": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
